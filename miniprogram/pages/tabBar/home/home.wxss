page{
  height: 100%;
  background-image: url('https://ae01.alicdn.com/kf/Hca01ffbab5de431e9ad5d5c79785f19fu.jpg');
  background-size: cover;
  /*https://hbimg.huabanimg.com/e42909d92b162df3968e7389201ce5c77ddafd761c9b03-S3p9J3_fw658*/
  background-repeat: no-repeat;
  z-index: -1;
}
.page{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.top_hurdle {
    width: 100%;
    height: 40px;
    background: #fff;
    display: flex;
    justify-content: start;
    align-items: center;
    flex-direction: row;
    box-shadow: 1px 1px 2px #eee;
    color: #aaa;
}

.top_hurdle image {
    width: 30px;
    height: 30px;
}

.hurdle_left {
    width: 55%;
    height: 40px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
}

.hurdle_left>text {
    width: 86%;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.hurdle_right {
    width: 45%;
    height: 40px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
}

.right_seach {
    width: 100%;
    height: 76%;
    background: #f8f8f8;
    border-radius: 30px;
    padding-left: 4px;
    display: flex;
    align-items: center;
    flex-direction: row;
}

.banner {
    width: 100%;
    height: 150px;
}

.banner image {
    width: 100%;
    height: 150px;
}

.notice {
    width: 100%;
    /* height: 100%; */
}

.nearby {
    width: 96%;
    height: 200px;
    margin-top: 10px;
    margin-bottom: 10px;
    background: #fff;
    padding: 2px 2%;
}

.nearby_title {
    background: #FFFFFF90;
    padding: 10px 0px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    position: relative;
    bottom: 0;
}

.nearby_title>view {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.nearby_list {
    width: 96%;
    display: flex;
    align-items: center;
    flex-direction: column;
    background: #fff;
    box-shadow: 1px 1px 2px #eee;
    padding: 0px 2%;
    border-bottom: 1px solid #fbc139;
}

.list_center {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.list_center_left {
    width: 70%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
    font-size: 12px;
}

.list_center_right {
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    flex-direction: column;
    font-size: 14px;
    color: #fbc139;
}

.list_bottom {
    width: 100%;
    height: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    font-size: 12px;
    color: #aaa;
}

.list_center_left>view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.list_center_left>view>view {
    background: #eee;
    margin: 1px 2px;
    padding: 4px;
    border-radius: 2px;
}

.content {
    padding: 2%;
}

.data_list {
    width: 100%;
    height: 100px;
    background: #ccc;
    border-radius: 10px;
    box-shadow: 1px 1px 4px #fff;
}

.shortcut {
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    background:#FFFFFF90;
    margin-bottom: 10px;
}

.shortcut>view {
    width: 25%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.start-match{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.pipei{
    color:rgb(196, 40, 92);
    font-weight: 700;
    font-style:inherit;
}
