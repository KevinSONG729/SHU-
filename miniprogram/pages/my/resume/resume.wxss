.basic {
    width: 92%;
    background: #FFF;
    margin: 10px auto;
    padding: 10px;
    color: #888;
    border-radius: 6px;
    box-shadow: 2px 2px 6px #DDD;
}

.head {
    display: flex;
    flex-direction: row;
}

.head_left {
    width: 80%;
    display: flex;
    flex-direction: column;
}

.head_left>view {
    display: flex;
    align-items: center;
    flex-direction: row;
    margin: 2px 0px;
}

.head_left image {
    margin-right: 10px;
}

.head_right {
    width: 20%;
    display: flex;
    align-items: flex-end;
    flex-direction: column;
}

.title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.body {
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #DDD;
    padding: 10px 8px;
}

.body_left {
    width: 90%;
    display: flex;
    flex-direction: column;
}

.body_right {
    width: 10%;
    display: flex;
    align-items: flex-end;
    flex-direction: column;
}

.add_data {
    padding: 8px 0px;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}